<%- include('partials/header') -%>

<link rel="stylesheet" href="/css/styles.css">
<form id="signupForm">
    <button type="submit">Sign Up</button>
</form>

<script>
    document.getElementById('signupForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent form from actually submitting

        // Get form data (replace with your actual form handling)
        const username = document.getElementById('username').value;
        // ... get other form data ...

        // Store user data in local storage (basic example - improve this)
        let registeredUsers = JSON.parse(localStorage.getItem('registeredUsers')) || [];
        registeredUsers.push({ username: username }); // Add user
        localStorage.setItem('registeredUsers', JSON.stringify(registeredUsers));

        alert("Signup successful!");
        window.location.href = 'index.html'; // Redirect to your main page
    });
</script>
<div class="container">
    <h2>Blood & Organ Donation Registration</h2>

    <form action="/register" method="POST">
        <label for="name">Full Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob" required>

        <label for="contact">Contact Number:</label>
        <input type="text" id="contact" name="contact" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>

        <label for="bloodType">Blood Type:</label>
        <select id="bloodType" name="bloodType" required>
            <option value="">Select Blood Type</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
        </select>

        <label>Have you donated blood before?</label>
        <input type="radio" name="donatedBefore" value="Yes" required> Yes
        <input type="radio" name="donatedBefore" value="No" required> No

        <label>Do you have any medical conditions?</label>
        <input type="radio" name="medicalCondition" value="Yes" required> Yes
        <input type="radio" name="medicalCondition" value="No" required> No

        <label>Are you taking any medication?</label>
        <input type="radio" name="medication" value="Yes" required> Yes
        <input type="radio" name="medication" value="No" required> No

        <button type="submit">Register</button>
    </form>
</div>

<%- include('partials/footer') -%>
