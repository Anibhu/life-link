<%- include ('../partials/header') -%>
<link rel="stylesheet" href="/css/styles.css">

<div class="organ">
    <h1 class="page-heading">Organ Donation Request</h1>
    
    <form action="/request" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="contact_number">Contact Number:</label>
        <input type="tel" id="contact_number" name="contact_number" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required>

        <label for="organ">Organ Required:</label>
        <select id="organ" name="organ" required>
            <option value="">Select an Organ</option>
            <option value="Kidney">Kidney</option>
            <option value="Liver">Liver</option>
            <option value="Lungs">Lungs</option>
            <option value="Heart">Heart</option>
            <option value="Pancreas">Pancreas</option>
            <option value="Intestine">Intestine</option>
            <option value="Cornea">Cornea</option>
            <option value="Skin">Skin</option>
            <option value="Bone Marrow">Bone Marrow</option>
            <option value="Blood">Blood</option>
        </select>

        <label for="blood-type">Blood Type:</label>
        <select id="blood-type" name="bloodgroup" required>
            <option value="">Select Blood Type</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
        </select>

        <label for="hla-info">HLA Information:</label>
        <input type="text" id="hla-info" name="hla_info" placeholder="Enter HLA matching details (if available)">

        <label for="required-within">Required Within (Days):</label>
        <input type="number" id="required-within" name="required_within" required>

        <label for="remarks">Remarks:</label>
        <textarea id="remarks" name="remarks" placeholder="Mention any pre-existing conditions, medical history, or special requirements..." rows="4"></textarea>

        <button type="submit">Submit</button>
    </form>
</div>

<style>
/* Global Styles - Consistency Across All Pages */
body {
    font-family: 'Inter', sans-serif;
    background-color: #F1F5F9; /* Light background */
    color: #1E293B; /* Dark text for readability */
    margin: 0;
    padding: 0;
}

/* Container Styling */
.organ {
    max-width: 600px;
    margin: 4rem auto;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.95); /* Slightly transparent for depth */
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(4px);
    color: #1E293B; /* Dark text */
}

/* Page Heading */
.organ .page-heading {
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: #1E3A8A; /* Deep blue for clear visibility */
}

/* Form */
.organ form {
    display: flex;
    flex-direction: column;
}

/* Labels */
.organ label {
    font-weight: 600;
    margin: 0.5rem 0;
    color: #111827; /* Very dark for strong contrast */
}

/* Inputs, Select, Textarea */
.organ input,
.organ select,
.organ textarea {
    width: 100%;
    padding: 12px;
    margin-top: 5px;
    border: 1px solid #6B7280; /* Darker gray for visibility */
    border-radius: 8px;
    font-size: 1rem;
    color: #111827; /* Dark text for easy reading */
    background: #ffffff; /* Pure white for contrast */
    transition: border 0.3s, box-shadow 0.3s;
}

/* Placeholder Styling */
.organ input::placeholder,
.organ textarea::placeholder {
    color: #4B5563; /* Darker gray for better visibility */
}

/* Input Focus Effects */
.organ input:focus,
.organ select:focus,
.organ textarea:focus {
    border-color: #1E40AF; /* Highlight */
    outline: none;
    box-shadow: 0 0 8px rgba(30, 64, 175, 0.3);
}

/* Button */
.organ button {
    background-color: #1E40AF; /* Deep blue button */
    color: white;
    padding: 12px;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
    margin-top: 1rem;
}

/* Button Hover Effect */
.organ button:hover {
    background-color: #1E3A8A; /* Darker blue */
    transform: scale(1.05);
}

</style>

<%- include ('../partials/footer') -%>