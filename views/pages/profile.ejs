<%- include('../partials/header')  %>
<div class="profile-container">
        <h1 class="page-heading">PROFILE</h1>

        <div class="card">
            <h2 class="section-heading">User Information</h2>
            <ul class="info-list">
                <li><strong>Patient ID:</strong> <span><%= user.id %></span></li>
                <li><strong>Name:</strong> <span><%= user.name %></span></li>
                <li><strong>Gender:</strong> <span><%= user.gender %></span></li>
                <li><strong>Age:</strong> <span><%= user.age %></span></li>
                <li><strong>Blood Group:</strong> <span><%= user.bloodgroup %></span></li>
                <li><strong>Contact Number:</strong> <span><%= user.contact %></span></li>
                <li><strong>Email:</strong> <span><%= user.email %></span></li>
                <li><strong>Address:</strong> <span><%= user.address %></span></li>
                <li><strong>Account Created On:</strong> <span><%= user.created_at %></span></li>
            </ul>
        </div>

        <% if (recipient) { %>
        <div class="card">
            <h2 class="section-heading">Patient Information</h2>
            <ul class="info-list">
                <li><strong>Patient Name:</strong> <span><%= recipient.name %></span></li>
                <li><strong>Organ Needed:</strong> <span><%= recipient.organ_part %></span></li>
                <li><strong>Contact Number:</strong> <span><%= recipient.contact_number %></span></li>
                <li><strong>Contact Email:</strong> <span><%= recipient.email %></span></li>
                <li><strong>Location:</strong> <span><%= recipient.location %></span></li>
            </ul>
        </div>
        <% } else { %>
        <div class="card no-data">
            <h3>No organ recipient data available.</h3>
        </div>
        <% } %>
    </div>
</body>
</html>

