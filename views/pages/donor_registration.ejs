<%- include ('../partials/header') -%>
<link rel="stylesheet" href="/css/styles.css">

<div class="donor-form">
    <h1 class="page-heading">Donor Registration</h1>

    <form action="/donor_registration" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="age">Age:</label>
        <input type="number" id="age" name="age" required>

        <label for="bloodgroup">Blood Group:</label>
        <select id="bloodgroup" name="bloodgroup" required>
            <option value="">Select Blood Group</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
        </select>

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required>

        <label for="contact">Contact Number:</label>
        <input type="tel" id="contact" name="contact" required>

        <button type="submit">Register</button>
    </form>
</div>

<style>
    /* Container Styling */
.donor-form {
    max-width: 600px;
    margin: 4rem auto;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.95); /* Light background for better visibility */
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(4px);
    color: #1E293B; /* Dark text for readability */
}

/* Page Heading */
.donor-form .page-heading {
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: #1E3A8A; /* Deep blue for clear visibility */
}

/* Form */
.donor-form form {
    display: flex;
    flex-direction: column;
}

/* Labels */
.donor-form label {
    font-weight: 600;
    margin: 0.5rem 0;
    color: #111827; /* Very dark for strong contrast */
}

/* Inputs & Select */
.donor-form input,
.donor-form select {
    width: 100%;
    padding: 12px;
    margin-top: 5px;
    border: 1px solid #6B7280; /* Darker gray for visibility */
    border-radius: 8px;
    font-size: 1rem;
    color: #111827; /* Dark text for easy reading */
    background: #ffffff; /* Pure white for contrast */
    transition: border 0.3s, box-shadow 0.3s;
}

/* Placeholder Styling */
.donor-form input::placeholder {
    color: #4B5563; /* Darker gray for better visibility */
}

/* Input Focus Effects */
.donor-form input:focus,
.donor-form select:focus {
    border-color: #1E40AF; /* Highlight */
    outline: none;
    box-shadow: 0 0 8px rgba(30, 64, 175, 0.3);
}

/* Button */
.donor-form button {
    background-color: #1E40AF; /* Deep blue button */
    color: white;
    padding: 12px;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
    margin-top: 1rem;
}

/* Button Hover Effect */
.donor-form button:hover {
    background-color: #1E3A8A; /* Darker blue */
    transform: scale(1.05);
}

</style>

<%- include ('../partials/footer') -%>
