<%- include ('../partials/header') %>

<form>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
    
    <label for="contact">Contact:</label>
    <input type="tel" id="contact" name="contact" required>
    
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
    
    <label for="blood_type">Blood Type:</label>
    <select id="blood_type" name="blood_type">
        <option value="A+">A+</option>
        <option value="A-">A-</option>
        <option value="B+">B+</option>
        <option value="B-">B-</option>
        <option value="O+">O+</option>
        <option value="O-">O-</option>
        <option value="AB+">AB+</option>
        <option value="AB-">AB-</option>
    </select>
    
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required>
    
    <label>Donate (Select multiple options if applicable):</label>
    <input type="checkbox" id="blood" name="donate" value="Blood"> Blood
    <input type="checkbox" id="plasma" name="donate" value="Plasma"> Plasma
    <input type="checkbox" id="platelets" name="donate" value="Platelets"> Platelets
    
    <div class="buttons">
        <a class = "button-links" href="#" class="register">Register</a>
        <a class = "button-links" href="/donor/login" class="login">Login Instead</a>
    </div>
</form>

<%- include ('../partials/footer') %>