<%- include('partials/header')  %>
    <section id="home" class="hero">
        <div class="hero-content">
            <h1>Save Lives, Donate Today</h1>
            <div class="banner">
                <h2>Give the Gift of Life - Donate Blood & Organs</h2>
            </div>
            <div class="cta-buttons">
                <button class="btn-register-btn" onclick="window.location.href='/donor_registration'">Register as a Donor</button>
                <button class="btn-request-btn" onclick="window.location.href='/organs'">Looking for a Donor</button>
            </div>
        </div>
    </section>

    <section id="about" class="about">
        <h2>About Us</h2>
        <div class="about-content">
            <img src="images/Blood-Donation-2.jpg" alt="Blood Donation">
            <p>
                LifeLink is a platform dedicated to connecting patients in need of organ transplants and blood donations with compatible donors. Our mission is to bridge the gap between donors and recipients by providing a seamless and efficient system for registration, searching, and matching. Users can create accounts, register as donors, and request organ transplants while hospitals can update real-time availability. With an easy-to-use dashboard, patients can track their requests, view donor details, and stay informed about their health needs. LifeLink ensures secure authentication, user-friendly navigation, and a reliable database, making the process of saving lives more accessible and efficient.
            </p>
        </div>
    </section>

    <section id="contact" class="contact">
        <div class="contact-content">
            <h2>Contact Us</h2>
            <p>Have questions or want to get involved? We'd love to hear from you!</p>
            <div class="contact-form">
                <form id="contactForm">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn-submit">Send Message</button>
                </form>
                <div id="form-response"></div>
            </div>
        </div>
    </section>

    <script>
        const mobileMenu = document.getElementById('mobile-menu');
        const navLinks = document.querySelector('.nav-links');

        mobileMenu.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const formResponse = document.getElementById('form-response');
            formResponse.innerHTML = "Thank you for your message. We will get back to you soon!";
            const formData = new FormData(event.target);
            // AJAX call to submit form data
        });
    </script>
</body>
</html>

<style>

/* General Styles */
body {
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #F9FAFB;
    color: #1F2937;
}

/* Hero, About, and Contact Sections */
.hero, .about, .contact {
    text-align: center;
    padding: 5rem 2rem;
}

.hero {
    background: linear-gradient(to right, #1E3A8A, #2563EB);
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.hero h1, .about h2, .contact h2 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

.about, .contact {
    background: linear-gradient(to right, #1E3A8A, #2563EB);
    color: white;
}

.about img {
    width: 50%;
    max-width: 400px;
    border-radius: 10px;
    margin-top: 1rem;
}

/* Buttons */
.btn-register-btn, .btn-request-btn {
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    color: white;
    margin: 0.5rem;
    font-size: 1rem;
    transition: transform 0.2s, box-shadow 0.2s;
}

.btn-register-btn {
    background-color: #10B981;
}

.btn-request-btn {
    background-color: #F59E0B;
}

.btn-register-btn:hover, .btn-request-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
}

/* Contact Section */
.contact-content {
    max-width: 600px;
    margin: 0 auto;
}

.contact p, .about p {
    font-size: 1.1rem;
    color: #E0E7FF;
    margin-bottom: 2rem;
    line-height: 1.6;
}

/* Contact Form */
.contact-form {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    max-width: 500px;
    margin: 2rem auto;
}

.form-group {
    margin-bottom: 1.5rem;
    text-align: left;
}

.form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1E3A8A;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #D1D5DB;
    border-radius: 5px;
    font-size: 1rem;
    transition: border-color 0.3s, box-shadow 0.3s;
}

.form-group input:focus,
.form-group textarea:focus {
    border-color: #2563EB;
    outline: none;
    box-shadow: 0 0 8px rgba(37, 99, 235, 0.3);
}

/* Submit Button */
.btn-submit {
    background-color: #2563EB;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
    width: 100%;
}

.btn-submit:hover {
    background-color: #1E40AF;
    transform: translateY(-2px);
}

/* Form Response */
#form-response {
    margin-top: 1rem;
    font-weight: 600;
    color: #16A34A;
}
</style>

